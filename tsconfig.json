{
    "compilerOptions": {
      "target": "ES2020",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "types": [
        "node",
      ],
      "typeRoots": [
        "./node_modules/@types",
        "./src/@types"
    ],
      "module": "commonjs",
      "strict": true,
      "allowJs": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./app",
      "resolveJsonModule": true,
      "sourceMap": true
    },
    "include": ["app/**/*"],
    "exclude": ["node_modules", "dist"],
  }